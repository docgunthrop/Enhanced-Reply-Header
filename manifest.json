{
	"manifest_version": 2,
	"name": "EnhancedReplyHeaders",
	"description": "Customizable headers for Thunderbird",
	"version": "1.0",
	"author": "docgunthrop",
	"homepage_url": "https://github.com/docgunthrop/Enhanced-Reply-Headers",
	"applications": {
		"gecko": {
			"id": "enhancedreplyheaders@docgunthrop.com",
			"strict_min_version": "102.0",
			"strict_max_version": "102.*"
		}
	},
	"icons": {
		"128": "images/icon-128px.png",
		"64": "images/icon-64px.png",
		"32": "images/icon-32px.png"
	},
	"background": {
		"page": "background.html"
	},
	"options_ui": {
		"page": "options/options.html",
		"open_in_tab": true,
		"browser_style": true
	},
	"permissions": [
		"compose",
		"messagesRead",
		"storage",
		"tabs"
	]
}